generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ContactRequest {
  id        String   @id @default(uuid())
  name      String
  email     String
  subject   String
  message   String
  clientId  String?  
  createdAt DateTime @default(now()) 
  updatedAt DateTime @updatedAt 

}
  
